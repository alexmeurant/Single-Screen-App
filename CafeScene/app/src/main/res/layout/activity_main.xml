<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#212121"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/cafe_scene"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="cafe scene image"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/cafe_scene" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@mipmap/location"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/phone_icon"
        android:layout_alignStart="@+id/phone_icon" />

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_above="@+id/address_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@mipmap/phone" />

    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@mipmap/email"
        android:layout_above="@+id/location"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="+33 04 93 49 47 08"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/phone_icon"
        android:layout_toRightOf="@+id/phone_icon"
        android:layout_toEndOf="@+id/phone_icon"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignTop="@+id/location"
        android:text="2211 Route de la Fenerie\n06580 PEGOMAS"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/location" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="contact@restaurantcafescene.fr"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/address_icon"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp"
        android:padding="16dp"
        android:text="Restaurant le midi, le Café Scène se transforme le soir en restaurant-musique-live-karaoké-bar.
\nAvec une carte variée qui change avec les saisons inspirée de la cuisine méditerranéenne et du monde."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>
